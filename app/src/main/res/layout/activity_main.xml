<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 구글 맵 -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 검색 및 버튼 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <!-- 검색바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="검색"
                android:background="@drawable/semi_transparent_button"
                android:padding="8dp"
                android:inputType="text"
                android:imeOptions="actionSearch" />

            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색"
                android:textColor="#FFFFFF"
                android:backgroundTint="#000000"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />
        </LinearLayout>

        <!-- 상단 버튼 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/myPageButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="마이페이지"
                app:icon="@drawable/ic_person"
                app:iconPadding="8dp"
                app:iconTint="@color/black"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                app:cornerRadius="40dp"
                android:elevation="4dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/groupButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="그룹"
                app:icon="@drawable/ic_group"
                app:iconSize="28dp"
                app:iconPadding="8dp"
                app:iconTint="@color/black"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                app:cornerRadius="40dp"
                android:elevation="4dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/setDestinationButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="목적지"
                app:icon="@drawable/ic_location"
                app:iconPadding="8dp"
                app:iconTint="@color/black"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                app:cornerRadius="40dp"
                android:elevation="4dp"/>
        </LinearLayout>

        <!-- 검색 추천 목록 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchSuggestionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/semi_transparent_button"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- 위치 공유 버튼 (우측 하단) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/locationToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="위치 공유"
        app:icon="@drawable/ic_location"
        app:iconPadding="8dp"
        app:iconTint="@color/black"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:cornerRadius="40dp"
        android:elevation="4dp"/>

    <!-- 경로 정보 표시 (상단 중앙) -->
    <TextView
        android:id="@+id/routeInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/semi_transparent_button"
        android:padding="8dp"
        android:textColor="@color/black"
        android:visibility="gone" />

    <!-- 목적지 설정 버튼 (하단 중앙) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmDestinationButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="목적지 설정"
        app:icon="@drawable/ic_location"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="#000000"
        app:cornerRadius="40dp"
        android:elevation="4dp"
        android:visibility="gone"/>

</FrameLayout>