<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <!-- 그룹이 없을 때 보여질 레이아웃 -->
    <LinearLayout
        android:id="@+id/noGroupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아직 그룹이 없습니다"
            android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/createGroupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="그룹 생성"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"/>
    </LinearLayout>

    <!-- 그룹이 있을 때 보여질 레이아웃 -->
    <LinearLayout
        android:id="@+id/hasGroupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/groupNameText"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="그룹명"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/inviteMemberButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="멤버 초대"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/groupAgreeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="그룹원 동의"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/groupChatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:text="그룹 채팅"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:layout_marginBottom="32dp"/>

        <!-- 그룹 관리 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/leaveGroupButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="그룹 나가기"
                android:textColor="#FFFFFF"
                android:backgroundTint="#000000"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/deleteGroupButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="그룹 삭제"
                android:textColor="#FFFFFF"
                android:backgroundTint="#000000"
                android:visibility="gone"/>
        </LinearLayout>
</LinearLayout>

</RelativeLayout>