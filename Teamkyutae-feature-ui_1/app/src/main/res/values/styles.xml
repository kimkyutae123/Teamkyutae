<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 반투명 버튼 스타일 -->
    <style name="TransparentButton">
        <item name="android:background">@drawable/semi_transparent_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- 입력창 스타일 -->
    <style name="CustomEditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- 제목 텍스트 스타일 -->
    <style name="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- 리스트뷰 스타일 -->
    <style name="CustomListView">
        <item name="android:background">@drawable/list_background</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources> 